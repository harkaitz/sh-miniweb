##:
#h: Usage: $0 [<] GMI-FILE > MD-FILE
#h:
#h: Convert from a Gemini markdown format to Github markdown format.
##:
gmi2md() {
    sed '
    s|^ *=>  *\([^ ][^ ]*\)  *\([^ ]*\)  *-  *\(.*\)|+ [\2](\1) - \3|
    s|^ *=>  *\([^ ][^ ]*\)\.gmi  *\(.*\)|+ [\2](\1.html)|
    s|^ *=>  *\([^ ][^ ]*\.jpg\)  *\(.*\)|+ [\2](\1) (Photo)|
    s|^ *=>  *\([^ ][^ ]*\)  *\(.*\)|+ [\2](\1)|
    ' -- "$@"
}
SCRNAME="`basename "$0"`"
if test @"${SCRNAME}" = @"gmi2md";then
    case "${1}" in
        -h|--help)
            sed -n 's/^ *#h: \{0,1\}//p' "$0" | sed "s|\\\$0|${SCRNAME}|g"
            echo ""
            sed -n 's/^ *#l: \{0,2\}//p' "$0"
            ;;
        *)
            gmi2md "$@"
            ;;
    esac
fi
