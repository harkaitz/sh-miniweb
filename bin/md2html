##:
#h: Usage: $0 [-t NAME][-s SKEL] [V:VAR=VAL ...] < MD-FILE > HTML-FILE
#h:
#h: Conver a markdown file to HTML format using `ftemplate`
#h: and `pandoc`.
##:
md2html() {
    ## Parse command line arguments.
    local OPTIND optopt name='' skel=''
    while getopts "t:s:" optopt; do
        case $optopt in
            t)  name="${OPTARG}";;
            s)  skel="${OPTARG}";;
            \?) return 1;;
        esac
    done
    shift $(( $OPTIND - 1 ))
    ## Convert to html.
    if test -n "$skel"; then
        ftemplate < "$skel" V:LOC="${name}" V:BODY="`ftemplate "$@" | pandoc -f markdown -t html`" "$@"
    else
        pandoc -f markdown -t html
    fi
}
md2html_check_programs() {
    local ret=0
    if ! which pandoc >/dev/null 2>&1; then
        echo >&2 "error: Program 'pandoc' not found."
        ret=1
    fi
    if ! which ftemplate >/dev/null 2>&1; then
        echo >&2 "error: Program 'ftemplate' not found."
        ret=1
    fi
    return "$ret"
}
md2html_check_programs
SCRNAME="`basename "$0"`"
if test @"${SCRNAME}" = @"md2html";then
    case "${1}" in
        -h|--help)
            sed -n 's/^ *#h: \{0,1\}//p' "$0" | sed "s|\\\$0|${SCRNAME}|g"
            echo ""
            sed -n 's/^ *#l: \{0,2\}//p' "$0"
            ;;
        *)
            md2html "$@"
            ;;
    esac
fi
